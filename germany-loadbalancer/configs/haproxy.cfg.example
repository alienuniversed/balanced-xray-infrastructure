global
        log /dev/log    local0
        log /dev/log    local1 notice
        chroot /var/lib/haproxy
        stats socket /run/haproxy/admin.sock mode 660 level admin
        stats timeout 30s
        user haproxy
        group haproxy
        daemon

        # Default SSL material locations
        ca-base /etc/ssl/certs
        crt-base /etc/ssl/private

        # SSL defaults
        ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384
        ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
        ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

# ---- HTTP defaults ----
defaults
        log     global
        mode    http
        option  httplog
        option  dontlognull
        timeout connect 5000
        timeout client  50000
        timeout server  50000
        errorfile 400 /etc/haproxy/errors/400.http
        errorfile 403 /etc/haproxy/errors/403.http
        errorfile 408 /etc/haproxy/errors/408.http
        errorfile 500 /etc/haproxy/errors/500.http
        errorfile 502 /etc/haproxy/errors/502.http
        errorfile 503 /etc/haproxy/errors/503.http
        errorfile 504 /etc/haproxy/errors/504.http

frontend http_in
    mode http
    bind :8080
    option httplog
    timeout client 50000
    timeout server 50000
    default_backend http_pool

backend http_pool
    mode http
    balance roundrobin
    timeout connect 3s
    timeout server 1h
    timeout client 1h
   # server ams-node <AMSTERDAM_IP>:449 check inter 2000 rise 1 fall 2
   # server localhost 127.0.0.1:80 check inter 2000 rise 1 fall 2
   # server oslo-node <OSLO_IP>:449  check inter 2000 rise 1 fall 2

# ================== TCP Load Balancer for VLESS/REALITY ==================
# Single entry point on port 443
frontend vless_in
        mode tcp
        bind :443
        option tcplog
        # Timeouts for long-lived VLESS connections
        timeout client 1h
        default_backend vless_pool

backend vless_pool
        mode tcp
        balance leastconn                 # Load balance by concurrent sessions
        option tcp-check
        tcp-check connect port 449        # TCP health check on same port
        timeout connect 3s
        timeout server 1h
        
        # Sticky session configuration
        stick-table type ip size 200k expire 30m store conn_rate(30s)
        stick on src

        # Oslo Node (Norway)
        server oslo-node 10.0.0.5:449  check inter 2000 rise 1 fall 2 weight 255

        # Amsterdam Node (Netherlands)
        server ams-node 10.0.0.2:449 check inter 2000 rise 1 fall 2 weight 245

        # Local node (load balancer itself) - backup with low weight
        server local-backup 127.0.0.1:449 check inter 2000 rise 1 fall 2 weight 1

# ================== HAProxy Statistics Page ==================
# Access at http://<loadbalancer-ip>:447
frontend haproxy_stats
    bind :447
    mode http
    stats enable
    stats uri /
    stats refresh 5s
    stats show-legends
    stats show-node
    # Enable authentication for security:
    stats auth admin:<CHANGE_ME_PASSWORD>

# ================== Prometheus Exporter ==================
frontend prometheus
    bind :448
    mode http
    http-request use-service prometheus-exporter
    no log
