# Load-Balanced HAProxy Infrastructure - Environment Variables
# Copy this file to .env and fill in your actual values
# WARNING: Never commit .env to git!

# ==================== WireGuard Configuration ====================

# Germany Load Balancer
GERMANY_PRIVATE_KEY=your_germany_private_key_here
GERMANY_PUBLIC_KEY=your_germany_public_key_here
GERMANY_PUBLIC_IP=203.0.113.1

# Oslo Endpoint
OSLO_PRIVATE_KEY=your_oslo_private_key_here
OSLO_PUBLIC_KEY=your_oslo_public_key_here
OSLO_PUBLIC_IP=203.0.113.2

# Amsterdam Endpoint
AMSTERDAM_PRIVATE_KEY=your_amsterdam_private_key_here
AMSTERDAM_PUBLIC_KEY=your_amsterdam_public_key_here
AMSTERDAM_PUBLIC_IP=203.0.113.3

# ==================== HAProxy Configuration ====================

# HAProxy Stats Authentication
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASSWORD=change_me_to_secure_password

# ==================== Monitoring Configuration ====================

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_me_to_secure_password
GRAFANA_PORT=3000

# Prometheus
PROMETHEUS_PORT=9090

# Alertmanager
ALERTMANAGER_PORT=9093

# ==================== Telegram Bot ====================

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz_example

# Telegram Chat ID (your chat ID for alerts)
TELEGRAM_CHAT_ID=-1001234567890

# ==================== NTOP Configuration ====================

# NTOP API Keys (generate in NTOP web interface)
OSLO_NTOP_API_KEY=your_oslo_ntop_api_key_here
AMSTERDAM_NTOP_API_KEY=your_amsterdam_ntop_api_key_here

# NTOP Ports
NTOP_WEB_PORT=3000
NTOP_EXPORTER_PORT=446

# ==================== Network Configuration ====================

# Internal VPN Network
VPN_NETWORK=10.0.0.0/24

# Node Internal IPs
GERMANY_INTERNAL_IP=10.0.0.1
AMSTERDAM_INTERNAL_IP=10.0.0.2
OSLO_INTERNAL_IP=10.0.0.5

# ==================== Service Ports ====================

# HAProxy
HAPROXY_FRONTEND_PORT=443
HAPROXY_STATS_PORT=447
HAPROXY_PROMETHEUS_PORT=448

# VLESS Backends
VLESS_BACKEND_PORT=449

# Monitoring Exporters
NODE_EXPORTER_PORT=8443
CADVISOR_PORT=8446

# WireGuard
WIREGUARD_PORT_WG0=51820
WIREGUARD_PORT_WG3=51823

# ==================== Optional: Docker Registry ====================

# If using private Docker registry
DOCKER_REGISTRY_URL=registry.example.com
DOCKER_REGISTRY_USER=your_username
DOCKER_REGISTRY_PASSWORD=your_password

# ==================== Backup Configuration ====================

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# Backup destination
BACKUP_DESTINATION=/opt/backups

# ==================== Logging Configuration ====================

# Log levels: debug, info, warning, error
LOG_LEVEL=info

# Log retention (days)
LOG_RETENTION_DAYS=30
